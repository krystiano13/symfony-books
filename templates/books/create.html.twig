{% extends "base.html.twig" %}

{% block javascripts %}
    {% block importmap %}
        {{ importmap('app') }}
        {{ importmap('create') }}
    {% endblock %}
{% endblock %}

{% block body %}
   <section class="w-full h-full flex justify-center items-center">
       <form id="create-form" action="#" class="entry-animation-1 mb-0 mt-6 space-y-4 rounded-lg w-[90vw] sm:w-[32rem] p-4 shadow-lg sm:p-6 lg:p-8">
           <p class="text-center text-lg font-medium">Create A New Book</p>

           <div>
               <label for="email" class="sr-only">Title</label>

               <div class="relative">
                   <input
                           type="text"
                           name="title"
                           required
                           minlength="3"
                           maxlength="255"
                           class="w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm"
                           placeholder="Title"
                   />

                   <span class="absolute inset-y-0 end-0 grid place-content-center px-4"></span>
               </div>
           </div>

           <div>
               <label class="sr-only">Author</label>

               <div class="relative">
                   <input
                           type="text"
                           required
                           name="author"
                           minlength="3"
                           maxlength="255"
                           class="w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm"
                           placeholder="Author"
                   />

                   <span class="absolute inset-y-0 end-0 grid place-content-center px-4"></span>
               </div>
           </div>

           <div>
               <label class="sr-only">ISBN-10</label>

               <div class="relative">
                   <input
                           type="text"
                           required
                           name="isbn"
                           class="w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm"
                           placeholder="ISBN-10"
                   />

                   <span class="absolute inset-y-0 end-0 grid place-content-center px-4"></span>
               </div>
           </div>

           <div>
               <label for="email" class="sr-only">Release Year</label>

               <div class="relative">
                   <input
                           type="number"
                           min="1900"
                           max="{{ year }}"
                           value="{{ year }}"
                           required
                           name="release_date"
                           class="w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm"
                           placeholder="Release Year"
                   />

                   <span class="absolute inset-y-0 end-0 grid place-content-center px-4"></span>
               </div>
           </div>

           <button
                   type="submit"
                   class="block w-full rounded-lg bg-indigo-600 px-5 py-3 text-sm font-medium text-white"
           >
               Create
           </button>
           <section id="errors"></section>
       </form>
   </section>
{% endblock %}