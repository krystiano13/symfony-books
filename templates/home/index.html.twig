{% extends "base.html.twig" %}

{% block javascripts %}
    {% block importmap %}
        {{ importmap('app') }}
        {{ importmap('home') }}
        {{ importmap('menu') }}
    {% endblock %}
{% endblock %}

{% block body %}
    <section class="w-full h-full flex flex-col gap-5 justify-center items-center">
        <div class="bg-gray-50 p-3 flex items-center gap-6 min-h-16 overflow-y-auto rounded-md sm:w-[50rem] w-[90vw]">
            <div>
                <label>Title</label>
                <input class="rounded-lg border-gray-200 p-2 pe-6 text-sm shadow-sm" id="title-filter" type="text" />
            </div>
            <div>
                <label>Author</label>
                <input class="rounded-lg border-gray-200 p-2 pe-6 text-sm shadow-sm" id="author-filter" type="text" />
            </div>
            <div>
                <label>Year</label>
                <input class="rounded-lg border-gray-200 p-2 pe-6 text-sm shadow-sm" id="year-filter" min="1900" max="2024" type="number" />
            </div>
            <div>
                <label>Sort by</label>
                <select class="rounded-lg border-gray-200 p-2 pe-6 text-sm shadow-sm">
                    <option value="ry-asc">Release Year - Ascending</option>
                    <option value="ry-desc">Release Year - Descending</option>
                    <option value="title-asc">Title - Ascending</option>
                    <option value="title-desc">Title - Descending</option>
                    <option value="author-asc">Author - Ascending</option>
                    <option value="author-desc">Author - Descending</option>
                </select>
            </div>
        </div>
        <ul class="bg-gray-50 overflow-y-auto rounded-md entry-animation-1 flex flex-col gap-3 sm:w-[50rem] w-[90vw] max-h-[40rem] min-h-[20rem] shadow-md p-4" id="books-list">
        </ul>
    </section>
{% endblock %}