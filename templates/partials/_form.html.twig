<form data-book="{{ mode == "edit" ? book.id : -1 }}" id="create-form" action="#" class="entry-animation-1 mb-0 mt-6 space-y-4 rounded-lg w-[90vw] sm:w-[32rem] p-4 shadow-lg sm:p-6 lg:p-8">
    {% if mode == "edit" %}
        <p class="text-center text-lg font-medium">Update Book</p>
    {% else %}
        <p class="text-center text-lg font-medium">Create A New Book</p>
    {% endif %}

    <div>
        <label for="email" class="sr-only">Title</label>

        <div class="relative">
            <input
                    type="text"
                    name="title"
                    required
                    minlength="3"
                    maxlength="255"
                    class="w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm"
                    placeholder="Title"
                    value="{{ mode == "edit" ? book.title : "" }}"
            />

            <span class="absolute inset-y-0 end-0 grid place-content-center px-4"></span>
        </div>
    </div>

    <div>
        <label class="sr-only">Author</label>

        <div class="relative">
            <input
                    type="text"
                    required
                    name="author"
                    minlength="3"
                    maxlength="255"
                    class="w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm"
                    placeholder="Author"
                    value="{{ mode == "edit" ? book.author : "" }}"
            />

            <span class="absolute inset-y-0 end-0 grid place-content-center px-4"></span>
        </div>
    </div>

    <div>
        <label class="sr-only">ISBN-10</label>

        <div class="relative">
            <input
                    type="text"
                    required
                    name="isbn"
                    class="w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm"
                    placeholder="ISBN-10"
                    value="{{ mode == "edit" ? book.isbn : "" }}"
            />

            <span class="absolute inset-y-0 end-0 grid place-content-center px-4"></span>
        </div>
    </div>

    <div>
        <label for="email" class="sr-only">Release Year</label>

        <div class="relative">
            <input
                    type="number"
                    min="1900"
                    max="{{ year }}"
                    required
                    name="release_date"
                    class="w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm"
                    placeholder="Release Year"
                    value="{{ mode == "edit" ? book.releaseDate : year }}"
            />

            <span class="absolute inset-y-0 end-0 grid place-content-center px-4"></span>
        </div>
    </div>

    <button
            type="submit"
            class="block w-full rounded-lg bg-indigo-600 px-5 py-3 text-sm font-medium text-white"
    >
        {% if mode == "edit" %}
            Edit
        {% else %}
            Create
        {% endif %}
    </button>
    <section id="errors"></section>
</form>